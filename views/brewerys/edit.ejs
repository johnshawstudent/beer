<%- include ../partials/header.ejs %>

<main class="container">
    <h1>Brewery Details</h1>
    <form method="post" action="<%= brewery._id %>">
        <fieldset class="form-group">
            <label for="title">Title: *</label>
            <input name="title" id="title" required value="<%= brewery.title %>" />
        </fieldset>
        <fieldset class="form-group">
            <label for="about">About: *</label>
            <textarea name="about" id="about" required><%= brewery.about %>
            </textarea>
        </fieldset>
        <fieldset class="form-group">
            <label for="beertypes">Types of Beer: *</label>
            <textarea name="beertypes" id="beertypes"><%= brewery.beertypes %></textarea>
        </fieldset>
        <fieldset class="form-group">
            <label for="city">City: *</label>
            <textarea name="city" id="city"><%= brewery.city %></textarea>
        </fieldset>
        <fieldset class="form-group">
            <label for="phone">Phone: *</label>
            <textarea name="phone" id="phone"><%= brewery.phone %></textarea>
        </fieldset>
        <fieldset class="form-group">
            <label for="yearfounded">Year Founded: *</label>
            <textarea name="yearfounded" id="yearfounded"><%= brewery.yearfounded %></textarea>
        </fieldset>

        <button class="waves-effect waves-light btn">Save</button>

        <a href="/brewerys/delete/<%= brewery._id %>" title="Delete" class="confirmation">
            <button class="waves-effect waves-light btnred" type="button">Delete</button>
        </a>
    </form>
</main>

<%- include ../partials/footer.ejs %>